# ═══════════════════════════════════════════════════════════════
# Terraform Variables Example File
# ═══════════════════════════════════════════════════════════════
# このファイルをコピーして terraform.tfvars として使用してください
# cp terraform.tfvars.example terraform.tfvars
#
# 【必須】は指定しないと実行不可
# ＜任意＞はデフォルト値が設定されているので指定無し可能


# ───────────────────────────────────────────────────────────────
# Basic Configuration
# ───────────────────────────────────────────────────────────────

# ＜任意＞ リソースをデプロイするAWSリージョン
aws_region = "ap-northeast-1"

# 【必須】 オーナー名
owner_name = "no-owner"

# 【必須】 プロジェクト名
project_name = "no-project"


# ───────────────────────────────────────────────────────────────
# Network Configuration
# ───────────────────────────────────────────────────────────────

# ＜任意＞ 使用するAZの数
az_count = "3"

# ＜任意＞ VPCのCIDRブロック
vpc_cidr = "10.0.0.0/16"

# ＜任意＞ プライベートホストゾーンのドメイン名
domain_name = "internal"


# ───────────────────────────────────────────────────────────────
# AMI Configuration
# ───────────────────────────────────────────────────────────────
# 指定しないときはapply時点の最新AMIが指定されます。

# ＜任意＞ Amazon Linux 2023 AMD64アーキテクチャのAMI ID
static_al2023_amd64 = "ami-0d4aa492f133a3068"

# ＜任意＞ Amazon Linux 2023 ARM64アーキテクチャのAMI ID
static_al2023_arm64 = "ami-0ca0364ff6a31d570"

# ＜任意＞ Ubuntu AMD64アーキテクチャのAMI ID
static_ubuntu_amd64 = "ami-03e736ee7fc3dc169"

# ＜任意＞ Ubuntu ARM64アーキテクチャのAMI ID
static_ubuntu_arm64 = "ami-05e2ae907de70068a"


# ───────────────────────────────────────────────────────────────
# NAT Bastion Instance Configuration
# ───────────────────────────────────────────────────────────────

# ＜任意＞ 踏み台インスタンスの設定
natbastion_instance = {
  instance_type    = "t4g.nano" # インスタンスタイプ(例: t4g.nano, t3.micro)
  architecture     = "arm64"    # アーキテクチャ(arm64またはamd64)
  az_2word         = "1a"       # AZのサフィックス(例: 1a, 1c, 1d)
  root_volume_size = 20         # ルートボリュームサイズ(GB単位)
}


# ───────────────────────────────────────────────────────────────
# Security Configuration
# ───────────────────────────────────────────────────────────────

# ＜任意＞ 生成した秘密鍵をpemファイルとして書き出すかどうか。
iscreate_key_bastion  = true
iscreate_key_workload = true

